{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "outDir": "lib"
  },
  "exclude": [
      ".vscode",
      "example",
      "lib",
      "node_modules"
  ]
}